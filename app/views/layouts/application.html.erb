<!DOCTYPE html>
<html>
<head>
  <title>iReadBooks</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if logged_in?  %>
  <div style="float: right;">You are logged in as <%= current_user.username %> |
    <%= link_to "Logout", logout_path %>
  </div>
<% end %>

<% flash.each do |key, value| %>
    <%= content_tag :p, value, class: key %>
<% end %>

<%= yield %>

</body>
</html>
